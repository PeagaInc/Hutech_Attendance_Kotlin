<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        card_view:cardElevation="1dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardBackgroundColor="@color/whiteBodyColor"
        card_view:cardPreventCornerOverlap="false"
        android:layout_margin="@dimen/card_margin">
        <LinearLayout
            style="@style/linearParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/imvThumb"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@android:color/white"
                android:src="@drawable/android_developer"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="left|center">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attendance_ic_baseline_school_24"
                        android:layout_marginRight="10dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtCourseName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Course name"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attendance_ic_baseline_time_24"
                        android:layout_marginRight="10dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtTimeStart"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Time Start"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attendance_ic_baseline_navigate_before_24"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=" Duration"
                        android:gravity="center"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attendance_ic_baseline_navigate_after_24"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtTimeEnd"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Time End"
                        android:gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attendance_ic_baseline_location_24"
                        android:layout_marginRight="10dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Location"
                        android:gravity="center"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/attendance_ic_baseline_status_24"
                        android:layout_marginRight="10dp"/>
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Status"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>